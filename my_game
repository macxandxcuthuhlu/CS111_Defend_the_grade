            t_text.forward(15)
        start_button.shapesize(5)
        start_button.penup()
        start_button.goto(100, -107)
        start_button.showturtle()
        s.update()
        while game != 'done':
            start_button.onclick(after_winning)
        s.update()
    
    def after_winning(x, y):
        global num_levels 
        num_levels = 6
        info_screen('best_end.txt', 100, 500, start)

    def reject_ending(x,y):
        clear_intro()
