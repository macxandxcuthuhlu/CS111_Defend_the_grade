    def death_screen():
        clear_screen()
        clear_game()
        global num_levels 
        num_levels = 6
        file_name = str(random.randint(0, 5)) + '.txt'
        event_screen(file_name, 170, 450, start, game_end)

  
            
if True:
    if True:
        def enemy_move():
            global grade
            global mental_health
            count = 0
            for i in enemy_group:
                
                i.forward(2)
                collide = did_collision_missile(i)
                collides = did_collision_wall(i)
                if collides:
                    enemy_die(i, count)
                    if i.shape() == 'assignment.gif' or i.shape() == 'paper.gif':
                        if mental_health < 0:
                            draw_text_m()
                            grade -= 1
                            draw_grade_rectangle()
                            wall_turtle.clear()
                        else:
                            mental_health -= 1
                            t_text_m.clear()
                            draw_text_m()
                    elif i.shape() == 'movie.gif':
                        if mental_health > 0:
                            mental_health -= 1
                            t_text_m.clear()
                            draw_text_m()
                    count -= 1
                elif collide:
                    enemy_die(i, count)
                    if i.shape() == 'movie.gif':
                        if mental_health <= 0:
                            draw_mental_health_wall()
                        mental_health += 2
                        t_text_m.clear()
                        draw_text_m()
                    

                    count -= 1
                count += 1
        
        def bullet_move():
            counter = 0
            for i in bullet_group:
                i.forward(4)
                if i.xcor() < -600:
                    i.hideturtle()
                    bullet_group.pop(counter)

    def next_level(x, y):
        global enemy_group
        global bullet_group
        global curr_level
        enemy_group = []
        bullet_group = []
        
        clear_screen()
        image_set_up(curr_level)
        draw_mental_health_wall()
        draw_grade_rectangle()
        set_up_student()
        draw_time_rectangle()
        draw_text_t()
        draw_text_m()
        draw_text_g()
        s.update()
        run_level()

    def run_level():
        global threshold
        global tick_speed
        enemy_val = 8
        move_val = 1
        end_val = 1020
        s.update()
        for i in stamp_ids:
            explosion.clearstamp(i)

        if grade < 1:
            death_screen()
        
        if threshold % enemy_val == 0:
            spawn_enemy()
            if tick_speed > 30:
                tick_speed -=1
        if threshold % move_val == 0:
            bullet_move()
            enemy_move()
        if threshold % end_val == 319:
            play_next_level(0, 0)
        if time > 0:
            s.onclick(shoot)
        else:
            time_turt.clear()
            s.onclick(out_of_time)
        threshold += 1
        s.ontimer(run_level, tick_speed)

    def spawn_enemy():
        global left_bound
        global bottom_bound
        global upward_bound

        enemy_determination = random.randint(0, 34)
        if enemy_determination < 8:
            assignment = turtle.Turtle()
            assignment.shape('assignment.gif')
            assignment.shapesize(5,5,5)
            assignment.hideturtle()
            assignment.penup()
            assignment.goto(left_bound, random.randint(bottom_bound, upward_bound))
            assignment.setheading(0)
            assignment.showturtle()

            enemy_group.append(assignment)
        elif enemy_determination < 11:
            movie = turtle.Turtle()
            movie.shape('movie.gif')
            movie.shapesize(5,5,5)
            movie.hideturtle()
            movie.penup()
            movie.goto(left_bound, random.randint(bottom_bound, upward_bound))
            movie.setheading(0)
            movie.showturtle()
            enemy_group.append(movie)
        elif enemy_determination < 16:
            paper = turtle.Turtle()
            paper.shape('paper.gif')
            paper.shapesize(5,5,5)
            paper.hideturtle()
            paper.penup()
            paper.goto(left_bound, random.randint(bottom_bound, upward_bound))
            paper.setheading(0)
            paper.showturtle()

            enemy_group.append(paper)


    def enemy_die(enemy, count):
        enemy.hideturtle()
        draw_explosion(enemy.xcor(), enemy.ycor())
        enemy.penup()
        enemy.goto(1000,1000)
        enemy_group.pop(count)

    def did_collision_missile(enemy):
        for missile in bullet_group:
            if (math.sqrt(math.pow(missile.xcor() - enemy.xcor(), 2)+ math.pow(missile.ycor() - enemy.ycor(), 2))) < 25:
                return True
        return False

    def did_collision_wall(enemy):
        if enemy.xcor() > 257:
                return True
        return False

    def shoot(x, y):
        global time
        missile = turtle.Turtle()
        missile.hideturtle()
        missile.shape('circle')
        missile.color('blue')
        missile.penup()
        missile.goto(302, -24)
        missile.showturtle()
        missile.setheading(missile.towards(x,y))
        bullet_group.append(missile)
        time -= 1
        draw_time_rectangle()


#main thats starts code
