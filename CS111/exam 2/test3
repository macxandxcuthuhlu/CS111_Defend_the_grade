import random

def sum_mult(list):
    m = 1
    for i in list:
        m = m * i
    m = m**(1/len(list))
    return m

def average1(list):
    
    d = sum(list)/len(list)
    return d
    
list = [   
]

for i in range(
    random.randint(4, 19)
    ):
    list.append(
        random.randint(1, 7)
        )


print(
    list
    )

average = sum_mult(
    list
    )

print(
    f'Your current power level: {average:.2f}'
)

list1 = []
for i in range(
    len(
        list
        )
    ):
    r = list[
        i
        ]
    #if i == 2:
    #    r = r*1.4
    #if i == 5:
    #    r = r*1.3
    m = int(
        abs(
            r-average1(
                list
                )
            )
        )
    for d in range(
        int(
            int(
            (
                m+1
                )
            *1.5
            )*1.8
        )
                   ):
        list1.append(
            list[
                i
                ]
            )
print(
    list1
    )
average = sum_mult(
    list1
    )
print(
    f'Your more-accurate power score: {average:.2f}'
        )
